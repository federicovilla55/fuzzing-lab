% report_style.sty
\ProvidesPackage{report_style}[2025/04/26 Fuzzing Lab Report style]

% Page layout
\RequirePackage[
	a4paper,
	top=2.5cm,
	bottom=2.5cm,
	left=2.5cm,
	right=2.5cm,
	headheight=14pt
]{geometry}

% Fonts
\RequirePackage{lmodern}
\RequirePackage[T1]{fontenc}
\RequirePackage[utf8]{inputenc}

% Headings
\RequirePackage{sectsty}
\allsectionsfont{\sffamily\bfseries}

% Figures & floats
\RequirePackage{graphicx}
\RequirePackage{caption}
\RequirePackage{subcaption}
\RequirePackage{float}
\captionsetup{
	font=small,
	labelfont=bf,
	labelsep=period,
	margin=5pt
}

% Code listings
\RequirePackage{listings}
\RequirePackage{xcolor}
\lstdefinelanguage{bash}{
	keywords={bash, exit, if, then, fi, for, do, done, mkdir, rm, python3},
	sensitive=false,
	comment=[l]{\#},
	morestring=[b]"
}
\lstset{
	basicstyle=\ttfamily\small,
	keywordstyle=\color{blue}\bfseries,
	commentstyle=\color{gray}\itshape,
	stringstyle=\color{olive},
	numbers=left,
	numberstyle=\tiny,
	stepnumber=1,
	numbersep=8pt,
	frame=single,
	breaklines=true,
	captionpos=b
}

% Hyperlinks
\RequirePackage[
	colorlinks=true,
	linkcolor=black,
	citecolor=blue,
	urlcolor=blue
]{hyperref}

% Bibliography
\RequirePackage[backend=biber,style=numeric,sorting=none]{biblatex}
\addbibresource{refs.bib}

% Headers & footers
\RequirePackage{fancyhdr}
\pagestyle{fancy}
\fancyhf{}
\renewcommand{\headrulewidth}{0.4pt}
\renewcommand{\footrulewidth}{0pt}
\fancyhead[C]{CS-412 Fuzzing Lab Report}
\fancyfoot[C]{\thepage}

% Misc
\RequirePackage{microtype} % better typography
\RequirePackage{enumitem}
\setlist{nosep}

\endinput
